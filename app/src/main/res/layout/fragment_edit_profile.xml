<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fl_color_gray_red_light">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fl="http://schemas.android.com/apk/res-auto"
        android:id="@id/user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="?actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@id/user_image"
                    android:layout_width="@dimen/user_image_size"
                    android:layout_height="@dimen/user_image_size"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_monkey_image"
                    app:riv_border_color="@android:color/transparent"
                    app:riv_border_width="1dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="true" />

                <moony.vn.flavorlife.widget.FlTextView
                    android:id="@id/edit_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Edit image"
                    android:textColor="@color/fl_color_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/user_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">


                <moony.vn.flavorlife.widget.FlEditText
                    android:id="@id/user_name"
                    style="@style/EditTextItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_user_name"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="Enter Username"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Thang Le Huy" />

                <include layout="@layout/light_red_gray_line" />

                <moony.vn.flavorlife.widget.FlEditText
                    android:id="@id/user_email"
                    style="@style/EditTextItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="Enter Email"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="thichanchuoi@monkey.jungle" />

            </LinearLayout>
        </LinearLayout>

        <moony.vn.flavorlife.widget.FlEditText
            android:id="@id/user_inspiration"
            style="@style/EditTextItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_inspiration"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|left"
            android:hint="Your inspiration"
            android:lines="2"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="A monkey can cook.\n Hate banana,Love beer" />

        <moony.vn.flavorlife.widget.FlTextView
            android:id="@id/change_profile"
            style="@style/TextBoldRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_next_red"
            android:gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Change Profile" />

        <moony.vn.flavorlife.widget.FlTextView
            style="@style/TextBoldRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_next_red"
            android:gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Switch account" />

        <moony.vn.flavorlife.widget.FlTextView
            style="@style/TextBoldRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_next_red"
            android:gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Deactive" />

        <moony.vn.flavorlife.widget.FlTextView
            style="@style/TextBoldRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_next_red"
            android:gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Log out" />

        <moony.vn.flavorlife.widget.FlTextView
            style="@style/TextBoldRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_next_red"
            android:gravity="left|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Exit" />
    </LinearLayout>
</ScrollView>