<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@id/user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar"
            app:riv_border_color="@android:color/transparent"
            app:riv_border_width="1dp"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <moony.vn.flavorlife.widget.FlTextView
                    android:id="@id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Monkey"
                    android:textColor="@color/fl_color"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <moony.vn.flavorlife.widget.FlTextView
                        android:id="@id/user_num_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_number_cookbook"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="12"
                        android:textColor="@color/fl_color" />


                    <moony.vn.flavorlife.widget.FlTextView
                        android:id="@id/user_num_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_number_recipes"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="174"
                        android:textColor="@color/fl_color" />

                    <moony.vn.flavorlife.widget.FlTextView
                        android:id="@id/user_num_follower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_number_follower"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="2668"
                        android:textColor="@color/fl_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <moony.vn.flavorlife.widget.FlButton
                    android:id="@id/follow"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_follow"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/following"
                    android:textColor="@color/fl_color"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<include layout="@layout/red_line" />-->
</LinearLayout>