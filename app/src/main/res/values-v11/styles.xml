<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionMenuTextColor">@color/picker_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:divider">@android:color/white</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MediaPickerTheme" parent="Theme.AppCompat">
        <item name="android:actionMenuTextColor">@color/picker_color</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:divider">@android:color/white</item>
    </style>

    <style name="AppBaseTheme.NoActionbar" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>